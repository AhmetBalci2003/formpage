

<form asp-action="register_action" asp-controller="Account" method="post">
    <div>
        <label for="Name">Ad</label>
        <input type="text" id="Name" name="Name" required />
    </div>
    <div>
        <label for="S_Name">Soyad</label>
        <input type="text" id="S_Name" name="S_Name" required />
    </div>
    <div>
        <label for="Email">E-posta</label>
        <input type="email" id="Email" name="Email" required />
    </div>
    <div>
        <label for="Password">Şifre</label>
        <input type="password" id="Password" name="Password" required />
    </div>
    <div>
        <label for="Phone_Num">Telefon Numarası</label>
        <input type="text" id="Phone_Num" name="Phone_Num" required />
    </div>
    <div>
        <button type="submit">Kayıt Ol</button>
    </div>
</form>
