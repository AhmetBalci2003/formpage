@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div style="color: red; font-weight: bold; margin-bottom: 10px; text-align: center;">
        @ViewBag.ErrorMessage
    </div>
}
<div style="max-width: 400px; margin: 0 auto; font-family: 'Poppins', sans-serif;">
    <h2 style="text-align: center; color: #4CAF50; font-size: 24px; font-weight: bold;">🌟 Kayıt Ol 🌟</h2>
    <form asp-action="register_action" asp-controller="Account" method="post" style="background: linear-gradient(135deg, #f9f9f9, #e0f7fa); border: 1px solid #ddd; padding: 20px; border-radius: 12px; box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);">
        <div style="margin-bottom: 20px;">
            <label for="Name" style="display: block; margin-bottom: 5px; color: #333; font-weight: bold; font-size: 14px;">Ad</label>
            <input type="text" id="Name" name="Name" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 14px; background: #fff;" placeholder="Adınızı girin" />
        </div>
        <div style="margin-bottom: 20px;">
            <label for="S_Name" style="display: block; margin-bottom: 5px; color: #333; font-weight: bold; font-size: 14px;">Soyad</label>
            <input type="text" id="S_Name" name="S_Name" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 14px; background: #fff;" placeholder="Soyadınızı girin" />
        </div>
        <div style="margin-bottom: 20px;">
            <label for="Email" style="display: block; margin-bottom: 5px; color: #333; font-weight: bold; font-size: 14px;">E-posta</label>
            <input type="email" id="Email" name="Email" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 14px; background: #fff;" placeholder="E-posta adresinizi girin" />
        </div>
        <div style="margin-bottom: 20px;">
            <label for="Password" style="display: block; margin-bottom: 5px; color: #333; font-weight: bold; font-size: 14px;">Şifre</label>
            <input type="password" id="Password" name="Password" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 14px; background: #fff;" placeholder="Şifrenizi girin" />
        </div>
        <div style="margin-bottom: 20px;">
            <label for="Phone_Num" style="display: block; margin-bottom: 5px; color: #333; font-weight: bold; font-size: 14px;">Telefon Numarası</label>
            <input type="text" id="Phone_Num" name="Phone_Num" required style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 14px; background: #fff;" placeholder="Telefon numaranızı girin" />
        </div>
        <div style="text-align: center; display: flex; justify-content: center; align-items: center;">
            <button type="submit" style="background: #4CAF50; color: white; padding: 12px 24px; border: none; border-radius: 6px; font-size: 16px; font-weight: bold; cursor: pointer; transition: background 0.3s; margin-right: 10px;">
                Kayıt Ol
            </button>
            <span style="font-size: 14px; color: #555; margin-left: 10px;">Zaten üye misiniz? </span>
            <a href="/Account/login_page" style="font-size: 14px; color: #4CAF50; font-weight: bold; text-decoration: none; margin-left: 5px;">Giriş Yap</a>
        </div>
    </form>
</div>